<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.machine.service.data.employee.dao.mapper.DataShopEmployeeMapper">

    <select id="listUserIdByCondition" resultType="java.lang.String">
        select se.user_id
        from t_data_shop_employee se
        <where>
            <if test="inputDto.employeeStatus != null  ">
                AND se.employee_status = #{inputDto.employeeStatus}
            </if>
            <if test="inputDto.userIdSet != null  and inputDto.userIdSet.size > 0">
                AND se.user_id IN
                <foreach item="item" collection="inputDto.userIdSet" open="(" separator="," close=")">
                    #{item}
                </foreach>
            </if>
        </where>
    </select>


    <select id="listByOffset" resultType="com.machine.service.data.employee.dao.mapper.entity.DataShopEmployeeEntity">
        select se.*
        from t_data_shop_employee se
        <where>
            <if test="inputDto.employeeStatus != null  ">
                AND se.employee_status = #{inputDto.employeeStatus}
            </if>
            <if test="inputDto.offset != null and inputDto.offset !='' ">
                AND se.id > #{inputDto.offset}
            </if>
        </where>
        ORDER BY se.id ASC
        LIMIT #{inputDto.size}
    </select>

</mapper>