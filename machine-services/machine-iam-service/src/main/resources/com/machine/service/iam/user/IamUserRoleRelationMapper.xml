<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.machine.service.iam.user.dao.mapper.IamUserRoleRelationMapper">

    <select id="listUserIdByRoleIdSet" resultType="java.lang.String">
        SELECT urt.user_id
        FROM t_iam_user_role_relation urt
        WHERE urt.role_id IN
        <foreach item="item" collection="roleIdSet" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

    <select id="countUserByRoleIdSet" resultType="com.machine.sdk.common.model.response.IdCountResponse">
        SELECT urt.role_id as id, count(0) as count
        FROM t_iam_user_role_relation urt
        WHERE urt.role_id IN
        <foreach item="item" collection="roleIdSet" open="(" separator="," close=")">
            #{item}
        </foreach>
        GROUP BY urt.role_id
    </select>

</mapper>